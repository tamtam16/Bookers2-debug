<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <div class="error_explanation">
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div>

      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, id:"inputTitle", type:"text", class:"form-control"  %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label><br>
          <%= f.text_area :body, id:"inputOpinion", type:"text", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <a href="/books">Back</a>
    </div>
  </div>
</div>